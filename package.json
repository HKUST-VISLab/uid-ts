{
  "name": "uid-ts",
  "version": "0.0.3",
  "description": "a uid generator written in TypeScript.",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "scripts": {
    "clean": "node tools/build clean",
    "build": "npm run clean && tsc -p .",
    "test": "npm run build && nyc ava",
    "bump": "standard-version",
    "release": "git push --follow-tags origin master"
  },
  "engines": {
    "node": ">=6.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HKUST-VISLab/uid-ts.git"
  },
  "keywords": [
    "uid",
    "typescript"
  ],
  "author": "chenzhutian",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/HKUST-VISLab/uid-ts.git/issues"
  },
  "homepage": "https://github.com/HKUST-VISLab/uid-ts#readme",
  "dependencies": {
    "@types/node": "^10.0.3"
  },
  "devDependencies": {
    "ava": "^0.25.0",
    "nyc": "^11.4.1",
    "shelljs": "^0.8.0",
    "standard-version": "^4.2.0",
    "tslint": "^5.8.0",
    "typescript": "^2.6.2"
  },
  "ava": {
    "files": [
      "dist/**/*.spec.js"
    ]
  },
  "nyc": {
    "include": [
      "dist/**/*.js"
    ],
    "exclude": [
      "dist/**/*.spec.js"
    ],
    "extensions": [
      ".ts"
    ],
    "sourceMap": true,
    "reporter": [
      "lcov",
      "text"
    ],
    "cache": true,
    "all": true,
    "check-coverage": false
  }
}
